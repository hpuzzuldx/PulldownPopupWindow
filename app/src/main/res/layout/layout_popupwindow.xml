<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dislike_popwindow_default_width"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:clickable="true"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:clickable="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="选出理由，为您优化"
            android:textColor="#777777"
            android:clickable="true"
            android:textSize="@dimen/dislike_popwindow_topbar_fontsize" />
        <TextView
            android:id="@+id/dislike_selected_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已选0项"
            android:textColor="#007AFF"
            android:clickable="true"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/dislike_popwindow_topbar_fontsize" />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/menu_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

    </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:clickable="true"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dislike_cancle_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textColor="#222222"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:textSize="@dimen/dislike_popwindow_bottombar_fontsize" />
        <TextView
            android:id="@+id/dislike_submit_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定"
            android:textColor="#007AFF"
            android:paddingRight="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:textSize="@dimen/dislike_popwindow_bottombar_fontsize"/>
    </LinearLayout>
</LinearLayout>